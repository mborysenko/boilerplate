{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "lib": ["ESNext", "dom"],
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@extensions/*": ["./extensions/*"],
            "@components/*": ["./components/*"]
        },
        "declaration": false,
        "declarationMap": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "files": [
        "./build/types/less.d.ts"
    ]
}
